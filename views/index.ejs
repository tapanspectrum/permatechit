<!DOCTYPE html>
<html>
<head>
	<title>Upload Form</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<style type="text/css">
	img{
		width: 100px;
		height: 100px;
	}
</style>
</head>
<body>
	<div class="container">
		<div class="row">
			<h2>Add Data</h2>

			<form method="post" enctype="multipart/form-data" action="/">
				
				<div class="form-group row" >
					<div class="col-lg-2" style="float: left;">
						<input type="file" name="upl1" class="form-control-file" multiple>
					</div>
				</div>
				<div class="form-group row" >
					<div class="col-lg-2" style="float: left;">
						<input type="submit" class="btn btn-primary">
					</div>
				</div>
			</form>
		</div>
		<div class="row">
			<% for (var i = 0; i < data.length; i++) { %>
			<div class="col-md-4">
				<div class="thumbnail">
					<div class="caption">
						<!-- <h3><%= data[i].media %></h3> -->
						
						<% if (data[i].media.split(".")[1] == 'mp4') { %>
							<h3><%=  data[i].media %></h3>
						<video controls width="100%">
							<source src="<%= data[i].media %>" type="video/mp4">
						
							Sorry, your browser doesn't support embedded videos.
						</video>

						<form method="post" action="/delete">
							<input id="prodId" name="mediaId" type="hidden" value="<%= data[i].mediaId %>">
							<input type="submit"  class = "btn btn-danger" name="Delete" value="Delete">
						</form>
							<%} else { %>
								<h3><%=  data[i].media %></h3>
								<img src="<%= data[i].media %>" class = "img-thumbnail">
								
		
								<form method="post" action="/delete">
									<input id="prodId" name="mediaId" type="hidden" value="<%= data[i].mediaId %>">
									<input type="submit"  class = "btn btn-danger" name="Delete" value="Delete">
								</form>
							<% } %> 

						
					</div>
				</div>
			</div>
			<% } %>
		</div>
	</div>
</body>
</html>